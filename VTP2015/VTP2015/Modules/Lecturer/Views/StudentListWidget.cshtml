@model IEnumerable<VTP2015.Modules.Lecturer.ViewModels.StudentListViewModel>

<div class="panel panel-default clearfix studentcontainer">
    <div class="panel-heading">
        <h3 class="panel-title">Studenten</h3>
    </div>
    <div class="panel-body" id="aanvraagPointerDiv">
        <input id="filter" type="text" class="form-control"/><br/>
        <ul id="studentlist" class="list-group">
            @foreach (var student in Model)
            {
                <li class="list-group-item studentpointer" data-studentid="@student.Email"><span class="name">@student.FirstName @student.Name</span></li>
            }
        </ul>
    </div>
</div>
